<div class="text-center">
  <h1 class="h3 font-weight-normal mb-3">管理使用者</h1>
</div>
<div class="container" style="width: 400px;">
  <form class="form-edit" action="/admin/user/{{data.user.id}}?_method=PUT" method="POST">
    <div class="form-row mb-3">
      <label class="form-label" for="name">使用者名稱</label>
      <input class="form-control" id="name" type="text" name="name" placeholder="Name" value="{{data.user.name}}" disabled>
    </div>
    <div class="form-row mb-3">
      <label class="form-label" for="email">電子信箱</label>
      <input class="form-control" id="email" type="text" name="email" placeholder="Email" value="{{data.user.email}}" disabled>
    </div>
    <div class="form-row mb-3">
      <label class="form-label" for="categoryId">負責項目</label>
      <select class="form-select" id="categoryId" name="categoryId">
        <option value="">無</option>
        {{#each data.category}}
        <option value="{{this.id}}" {{#ifCond this.id ../data.user.categoryId}} selected {{/ifCond}}>{{this.category}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-row mb-3">
      <label class="form-label" for="roleId">角色權限</label>
      <select class="form-select" id="roleId" name="roleId" required>
        <option value=""></option>
        {{#each data.role}}
        <option value="{{this.id}}" {{#ifCond this.id ../data.user.roleId}} selected {{/ifCond}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    
    <div class="row justify-content-center align-items-center">
      <button class="btn btn-primary btn-block" style="width: 150px;" type="submit">送出</button>
    </div>
  </form>
</div>
<div class="row justify-content-center align-items-center">
  <a href="/admin/users" class="btn btn-dark mt-2" style="width: 150px;">返回上一頁</a>
</div>