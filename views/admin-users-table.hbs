{{>admin-page-tabs route='adminUsers'}}

<div class="overflow-auto p-3 mx-auto" style="max-height: 900px;">
  <div class="table-responsive">
    <table class="table table-hover" id="applicationTable">
      <thead>
        <tr>
          <th scope="col" class="text-nowrap">管理</th>
          <th scope="col" class="text-nowrap">使用者</th>
          <th scope="col" class="text-nowrap">Email</th>
          <th scope="col" class="text-nowrap">負責項目</th>
          <th scope="col" class="text-nowrap">角色權限</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
        <tr>
          <td>
            <a href="/admin/user/{{this.id}}" class="btn btn-primary">管理</a>
          </td>
          <td>{{this.name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.Category.category}}</td>
          <td>{{this.Role.name}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<div class="mt-3 row justify-content-center align-items-center">
  <a href="/home" class="btn btn-dark mt-2" style="width: 150px;">返回上一頁</a>
</div>